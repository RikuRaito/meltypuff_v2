generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  passwd String
  phoneNumber String @map("phone_number")
  postCode String @map("post_code")
  address1 String @map("address_1")
  address2 String @map("address_2")
}

model Product_Non {
  id Int @id @default(autoincrement())
  name String
  recommend Int @default(0)
  displayName String @map("display_name")
  imagePath String @map("image_path")
  price Int
  stock Int
}

model Product_Nic {
  id Int @id @default(autoincrement()) 
  name String 
  recommend Int @default(0)
  displayName String @map("display_name")
  imagePath String @map("image_path")
  price Int
  stock Int
}

model Coupon {
  id Int @id @default(autoincrement())
  code String @unique
  finalPriceRate Decimal @map("final_price_rate")
}

model Admin {
  id Int @id @default(autoincrement())
  inAppId String @map("in_app_id")
  passwd String
}

model Contact {
  id Int @id @default(autoincrement())
  email String
  content String
}