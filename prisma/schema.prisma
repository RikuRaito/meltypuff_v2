generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  passwd String
  phoneNumber String @map("phone_number")
  postCode String @map("post_code")
  address1 String @map("address_1")
  address2 String @map("address_2")
}

model Product_Non {
  id Int @id @default(autoincrement())
  name String
  recommend Int @default(0)
  displayName String @map("display_name")
  imagePath String @map("image_path")
  price Int
  stock Int
}

model Product_Nic {
  id Int @id @default(autoincrement()) 
  name String 
  recommend Int @default(0)
  displayName String @map("display_name")
  imagePath String @map("image_path")
  price Int
  stock Int
}

model Coupon {
  id Int @id @default(autoincrement())
  code String @unique
  finalPriceRate Decimal @map("final_price_rate")
}

model Admin {
  id Int @id @default(autoincrement())
  inAppId String @map("in_app_id")
  email String @unique
  passwd String
}

model Contact {
  id Int @id @default(autoincrement())
  name String @default("")
  email String
  content String
}

model Payment {
  id Int @id @default(autoincrement())
  name String
  email String
  phone String
  zipCode String @map("zip_code")
  address1 String
  address2 String
  price Int
  coupon String?
  createdAt DateTime @default(now()) @map("created_at")
  status String
  
  // リレーション: 1つのPaymentに複数のPaymentItemが紐付く
  items PaymentItem[]
}

model PaymentItem {
  id Int @id @default(autoincrement())
  paymentId Int @map("payment_id")
  
  // 商品情報（購入時点の情報を保存）
  productId Int @map("product_id")
  productType String @map("product_type") // "nic" または "non"
  productName String @map("product_name")
  displayName String @map("display_name")
  imagePath String @map("image_path")
  price Int // 購入時点の単価
  quantity Int
  
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  
  @@map("payment_item")
}